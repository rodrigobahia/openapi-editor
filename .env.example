# =============================================================================
# OpenAPI Editor - Arquivo de Configuração de Ambiente
# =============================================================================
# 
# Copie este arquivo para config.local.php e configure as variáveis
# de acordo com seu ambiente específico.
#
# IMPORTANTE: Nunca commite config.local.php no repositório!
#

# Ambiente da aplicação
# Valores: development, staging, production
APP_ENV=development

# Modo debug (true/false)
APP_DEBUG=true

# =============================================================================
# CONFIGURAÇÕES DE INTERFACE
# =============================================================================

# Mostrar card de listagem de arquivos (RECOMENDADO: false em produção)
SHOW_FILE_LIST=true

# Mostrar card de upload de arquivos
SHOW_FILE_UPLOAD=true

# Mostrar card de novo arquivo
SHOW_NEW_FILE=true

# Mostrar card de visualização
SHOW_PREVIEW=true

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Permitir criação de novos arquivos
ALLOW_FILE_CREATION=true

# Permitir exclusão de arquivos (RECOMENDADO: false em produção)
ALLOW_FILE_DELETION=false

# Permitir edição de arquivos existentes
ALLOW_FILE_EDITING=true

# Tamanho máximo de upload em MB
MAX_UPLOAD_SIZE=5

# =============================================================================
# CONFIGURAÇÕES DE API E BRANDING
# =============================================================================

# URL base da API - ALTERE PARA SEUS DADOS
API_BASE_URL=https://api.exemplo.com

# Nome da empresa - ALTERE PARA SUA EMPRESA
COMPANY_NAME=Sua Empresa Ltda

# URL da empresa - ALTERE PARA SEU DOMÍNIO
COMPANY_URL=https://seudominio.com

# Cor primária (hex)
PRIMARY_COLOR=#007bff

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS
# =============================================================================

# Habilitar cache
ENABLE_CACHE=false

# Habilitar logs
ENABLE_LOGGING=true

# Nível de log (debug, info, warning, error)
LOG_LEVEL=debug